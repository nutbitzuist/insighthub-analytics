# ===========================================
# InsightHub Environment Variables
# Copy this file to .env.local and fill in values
# ===========================================

# -----------------------------
# Application
# -----------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_COLLECT_URL=http://localhost:3001

# -----------------------------
# PostgreSQL (Railway or Local)
# -----------------------------
DATABASE_URL=postgresql://postgres:password@localhost:5432/insighthub

# -----------------------------
# ClickHouse (Analytics)
# -----------------------------
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=insighthub

# For ClickHouse Cloud:
# CLICKHOUSE_HOST=xxx.clickhouse.cloud
# CLICKHOUSE_PORT=8443
# CLICKHOUSE_SECURE=true

# -----------------------------
# Redis
# -----------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------
# Authentication (NextAuth)
# -----------------------------
NEXTAUTH_SECRET=your-super-secret-key-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------
# Stripe
# -----------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# -----------------------------
# Geolocation (MaxMind)
# -----------------------------
MAXMIND_LICENSE_KEY=

# -----------------------------
# Storage (S3-compatible)
# -----------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=insighthub-assets

# -----------------------------
# Email (Resend)
# -----------------------------
RESEND_API_KEY=

# -----------------------------
# Monitoring
# -----------------------------
SENTRY_DSN=

{
  "name": "tracking-script",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "esbuild src/tracker.ts --bundle --watch --outfile=dist/ih.js",
    "build": "esbuild src/tracker.ts --bundle --minify --outfile=dist/ih.min.js && gzip -k dist/ih.min.js",
    "build:heatmap": "esbuild src/heatmap.ts --bundle --minify --outfile=dist/ih-heatmap.min.js"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  }
}
